################################################################################
#
# Run a series of test programs and print their status
#
################################################################################


################################################################################
#	headers								       #
################################################################################


################################################################################
#	variables							       #
################################################################################
declare	tests


################################################################################
#	functions							       #
################################################################################
function	find_tests()
{

	tests="$(find . -type f -name '*-test')"
}


################################################################################
#	main								       #
################################################################################
function	main()
{

	find_tests

	for test in ${tests}; do
		${test}
	done
}


################################################################################
#	run								       #
################################################################################
main


################################################################################
#	end of file							       #
################################################################################
